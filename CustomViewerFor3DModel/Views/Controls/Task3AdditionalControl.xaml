<UserControl x:Class="CustomViewerFor3DModel.Views.Controls.Task3AdditionalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomViewerFor3DModel.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Column="2" Grid.Row="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="50" MaxWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="50" MaxWidth="200"/>
        </Grid.ColumnDefinitions>
        <Button Content="LOAD" Grid.Column="0" Command="{Binding LoadCommand}" Style="{StaticResource AdditionalButton}"/>
        <Button Content="CLEAR" Grid.Column="1" Command="{Binding ClearCommand}" Style="{StaticResource AdditionalButton}"/>
    </Grid>
</UserControl>
